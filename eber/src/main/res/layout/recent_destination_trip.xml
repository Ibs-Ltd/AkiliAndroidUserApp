<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/secondTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:src="@drawable/ic_work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesanspro_regular"
        android:lineHeight="23.5dp"
        android:text="Mkwajuni Bus Stop"
        android:textColor="@color/ebon_clay_background"
        android:textFontWeight="500"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/secondTrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/secondTrip"
        app:layout_constraintTop_toTopOf="@+id/secondTrip" />

</androidx.constraintlayout.widget.ConstraintLayout>